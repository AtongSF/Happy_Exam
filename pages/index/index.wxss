/* 全局container样式 */

.home-container {
  position: absolute;
  height: 100%;
  width: 100%;
  background-color: lightcyan;
  z-index: -10;
  overflow: hidden;
}

/* home-top */

.home-top {
  width: 100%;
  /* background-color: pink; */
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

/* 刷题进度球 */

.progress-circle {
  width: 35%;
  text-align: center;
}

.circle {
  display: inline-block;
  right: 30rpx;
  z-index: 1;
  position: absolute;
  top: 20rpx;
}

.circle-back{
  position: absolute;
  top: 20rpx;
  right: 30rpx;
}


/* 下拉框样式 */

.select-box {
  text-align: left;
  background: #fff;
  width: 40%;
  margin: 100rpx 0rpx 80rpx -35rpx;
  position: relative;
}

.tiku {
  /* background-color: white; */
  width: 104rpx;
  height: 70rpx;
  margin-top: 100rpx;
  line-height: 70rpx;
  vertical-align: middle;
  font-size: 35rpx;
  margin-left: 35rpx;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border: 1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding-left: 15rpx;
}

.select-text {
  font-size: 30rpx;
  flex: 1;
  /* background-color: red; */
  display: inline-block;
  width: 100%;
}

.select-img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
  position: absolute;
  right: 10rpx;
}

.select-img-rotate {
  transform: rotate(180deg);
}

.option-box {
  position: absolute;
  top: 67rpx;
  width: 100%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

/* 中间模块的内容 */

.home-middle {
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 50rpx;
  position: absolute;
  z-index: -1;
}

.choice-item {
  width: 45%;
  height: 325rpx;
  border: 2rpx solid gray;
  align-items: center;
  text-align: center;
  justify-content: center;
  line-height: 350rpx;
}

/* 底部学霸点 */

.genius-score {
  position: absolute;
  bottom: 25rpx;
  width: 70%;
  text-align: center;
  left: 15%;
  color: darkgray;
}

.popup-back {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: rgba(122,122,122,.2);
}

.choose-box {
  position: absolute;
  background-color:white;
  height: 60%;
  width: 70%;
  box-shadow: 0 4px 12px rgba(0,0,0,.15);
  border-radius: 6px;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  padding: 30rpx 0;
  z-index: 1;
  overflow: auto;
}

.group-item-box {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  border-bottom: 2rpx solid#ccc;
}

.group-item-box-hover {
  background: #f0f0f0;
}