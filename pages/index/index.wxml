<view class='home-container'>
  <view class='home-top'>
    <view class='select-box'>
      <view class='select' catchtap='selectTap'>
        <text class='select-text'>{{selectData[index]}}</text>
        <image class='select-img {{show&&"select-img-rotate"}}' src='../../images/down-arrow.png'></image>              </view>
      <view class='option-box' style='height:{{show?(selectData.length>5?240:selectData.length*60):0}}rpx;'>
        <text class='option' style='{{index==selectData.length-1&&"border:0;"}}' wx:for='{{selectData}}' wx:key='this' data-index='{{index}}' catchtap='optionTap'>{{item}}</text>
      </view>
    </view>
    <view class='progress-circle'></view>
  </view>
  <view class='home-middle'>
    <view class='choice-item' bindtap='toExercise' data-type='{{exerciseType[0]}}'>
      <text>随机练习</text>
    </view>
    <view class='choice-item' bindtap='toExercise'data-type='{{exerciseType[1]}}'>
      <text>专项练习</text>
    </view>
    <view class='choice-item' bindtap='toExercise' data-type='{{exerciseType[2]}}'>
      <text>我的收藏</text>
    </view>
    <view class='choice-item'bindtap='toExercise' data-type='{{exerciseType[3]}}'>
      <text>我的错题</text>
    </view>
    <!-- <view class='choice-item item-center' bindtap='toExercise' data-type='{{exerciseType[4]}}'>
      <text>模拟考试</text>
    </view> -->
  </view>
</view>